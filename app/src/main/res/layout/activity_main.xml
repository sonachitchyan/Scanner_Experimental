<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="com.example.sonanew.scanner.MainActivity">

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:checkedButton="@id/radio_barcode"
        >
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/code"
            android:textSize="20sp"
            android:layout_marginEnd="4dp"
            android:id="@+id/radio_code"
            android:onClick="onRadioButtonChecked"

            />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/art"
            android:textSize="20sp"
            android:layout_marginEnd="4dp"
            android:id="@+id/radio_article"
            android:onClick="onRadioButtonChecked"

            />
        <RadioButton

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/barcode"
            android:textSize="20sp"
            android:id="@+id/radio_barcode"
            android:onClick="onRadioButtonChecked"
            />
    </RadioGroup>

    <EditText
        android:id="@+id/barcode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/barcode" />

    <EditText
        android:id="@+id/count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:hint="@string/count"
        android:inputType="number" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="@android:dimen/app_icon_size"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:text="RESULTS"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="Name"
            android:gravity="center"
            android:textStyle="bold"
            android:background="@drawable/borders"/>

            <TextView
                android:id="@+id/name_text"
                android:layout_width="match_parent"
                android:layout_height="@android:dimen/app_icon_size"
                android:background="@drawable/borders"/>
            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Count"
            android:gravity="center"
            android:textStyle="bold"
            android:background="@drawable/borders"/>

            <TextView
                android:id="@+id/count_text"
                android:layout_width="match_parent"
                android:layout_height="@android:dimen/app_icon_size"
                android:background="@drawable/borders"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Count Base"
                android:gravity="center"
                android:textStyle="bold"
                android:background="@drawable/borders"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@android:dimen/app_icon_size"
                android:id="@+id/count_db_text"
                android:background="@drawable/borders"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Value"
            android:gravity="center"
            android:textStyle="bold"
            android:background="@drawable/borders"/>

            <TextView
                android:id="@+id/value_text"
                android:layout_width="match_parent"
                android:layout_height="@android:dimen/app_icon_size"
                android:background="@drawable/borders"/>
        </LinearLayout>


    </LinearLayout>

